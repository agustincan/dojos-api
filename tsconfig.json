{
   "compilerOptions": {
      "lib": [
         "ES5",
         "ES6"
      ],
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": false,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
   },
   "exclude": ["node_modues"]
}